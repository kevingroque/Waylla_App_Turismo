<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ChatBotActivity"
    tools:showIn="@layout/activity_chat_bot"
    android:layout_margin="10dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatbot_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/chatbot_btn_record"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.4"
            android:background="@null"
            android:elevation="0dp"
            app:srcCompat="@drawable/ic_mic" />

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.2"
            android:background="@null"
            android:hint="Escribir mensaje"
            android:paddingLeft="10dp" />


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/chatbot_btn_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.4"
            android:background="@null"
            android:elevation="0dp"
            app:srcCompat="@drawable/ic_send" />

    </LinearLayout>

</RelativeLayout>